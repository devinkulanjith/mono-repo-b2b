{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "vtex.address-context/*": ["./third_party/address-context/react/*"]
    }
  },
  "exclude": ["node_modules", "third_party"],
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts", "setupTests.js"]
}
